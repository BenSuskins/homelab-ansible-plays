{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "tasks/docker/**/*.yml"
      ],
      "pinDigests": true,
      "groupName": "Ansible Docker Images"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "tasks/docker/.*\\.yml$"
      ],
      "matchStrings": [
        "image: ['\"]?(?<depName>[^'\"]+)['\"]?:['\"]?(?<currentValue>[^'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "currentValueTemplate": "{{currentValue}}"
    }
  ]
}
