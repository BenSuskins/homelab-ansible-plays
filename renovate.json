{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "regex"
      ],
      "matchPaths": [
        "tasks/docker/**/*.yml"
      ],
      "groupName": "Ansible Docker Images"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "tasks/docker/.*\\.yml$"
      ],
      "matchStrings": [
        "image: ['\"]?(?<depName>[^'\"]+)['\"]?:['\"]?(?<currentValue>[^'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker",
      "currentValueTemplate": "{{currentValue}}"
    }
  ]
}