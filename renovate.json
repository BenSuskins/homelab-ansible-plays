{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    "schedule:daily"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "ansible"
      ],
      "pinDigests": false,
      "groupName": "Ansible Docker Images"
    }
  ],
  "ansible": {
    "fileMatch": [
      "tasks/docker/.+\\.ya?ml$"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "{{ secrets.MEND_DOCKER_USERNAME }}",
      "password": "{{ secrets.MEND_DOCKER_TOKEN }}"
    },
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "{{ secrets.MEND_GITHUB_USERNAME }}",
      "password": "{{ secrets.MEND_GITHUB_TOKEN }}"
    }
  ]
}