{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "tasks/docker/**/*.yml"
      ],
      "pinDigests": true,
      "groupName": "Ansible Docker Images"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "tasks/docker/.*\\.yml$"
      ],
      "datasourceTemplate": "docker",
      "currentValueTemplate": "{{currentValue}}"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "username": "{{env:MEND_DOCKER_USERNAME}}",
      "password": "{{env:MEND_DOCKER_TOKEN}}"
    }
  ]
}