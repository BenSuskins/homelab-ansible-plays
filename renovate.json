{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "ansible"
      ],
      "pinDigests": true,
      "groupName": "Ansible Docker Images"
    }
  ],
  "ansible": {
    "fileMatch": [
      "tasks/docker/.+\\.ya?ml$"
    ]
  },
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "{{env:MEND_DOCKER_USERNAME}}",
      "password": "{{env:MEND_DOCKER_TOKEN}}"
    },
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "{{env:MEND_GITHUB_USERNAME}}",
      "password": "{{env:MEND_GITHUB_TOKEN}}"
    }
  ]
}