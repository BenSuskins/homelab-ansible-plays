---
# Autogenerated by Ansible
{% set grouped = (all_services | sort(attribute='friendly_name')) | groupby('friendly_name') %}

{% for friendly_name, services in grouped %}
- {{ friendly_name }}:
{% for svc in services %}
    - {{ svc.name | capitalize }}:
        href: https://{{ svc.name }}.suskins.co.uk
        icon: {{ svc.name | lower }}
        description: {{ svc.name | capitalize }} container
{% endfor %}
{% endfor %}
###########################
#        General          #
###########################
- General:
{% for svc in static_services %}
{% if not svc.hidden %}
    - {{ svc.name | capitalize }}:
        href: https://{{ svc.host }}
        icon: {{ svc.name | lower }}
        description: {{ svc.name | capitalize }}
{% endif %}
{% endfor %}
